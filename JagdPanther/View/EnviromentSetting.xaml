<UserControl x:Class="JagdPanther.View.EnviromentSetting"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:local="clr-namespace:JagdPanther.View"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       d:DesignHeight="300"
       d:DesignWidth="300"
       mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <CheckBox Content="スレッドの閲覧にWebビューを使用する" Margin="3" Name="iswebview"/>
            <CheckBox Content="スレッドの閲覧をツリービュー方式で表示する" Margin="3" Name="istreeview"/>
            <CheckBox Margin="3" Name="isshowbaka">
                <TextBlock>
                    <Run>スタンプを表示する(一部サブレ及びWebView使用時のみ有効)</Run>
                </TextBlock>
            </CheckBox>
        </StackPanel>
    </Grid>
</UserControl>
