<Window x:Class="JagdPanther.Dialogs.OpenWriteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JagdPanther.Dialogs"
        mc:Ignorable="d"
        Title="リプライする" Height="300" Width="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBox Name="data" Margin="4" AcceptsReturn="True"/>
        <Button Name="write" IsCancel="False" Grid.Row="1" Content="書き込む" Click="write_Click" IsDefault="True" Margin="4"/>
    </Grid>

</Window>
