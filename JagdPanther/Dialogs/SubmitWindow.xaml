<Window x:Class="JagdPanther.Dialogs.SubmitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JagdPanther.Dialogs"
        mc:Ignorable="d"
        Title="SubmitWindow" Height="300" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <CheckBox Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Name="c1" Checked="c1_Checked">
            リンクを投稿する
        </CheckBox>
        <TextBlock Margin="-150,0,0,0" Height="20" Width="60" Text="タイトル" Name="title"/>
        <TextBox Margin="5" HorizontalAlignment="Right" Width="250" Height="20"/>
        
        <TextBox Grid.Row="1" Name="text" AcceptsReturn="True"/>
        <Button Grid.Row="2" Margin="3" HorizontalAlignment="Right" Width="75" Content="投稿する" Click="Button_Click"/>
    </Grid>
</Window>
